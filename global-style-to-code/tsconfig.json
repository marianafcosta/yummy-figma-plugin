{
  "compilerOptions": {
    "lib": ["es6"],
    "target": "es6",
    "strict": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@figma",
      "./src/@types"
    ],
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "declarationMap": true,
    "suppressImplicitAnyIndexErrors": true
  }
}
